<div class="container">
    <div class="cont-title">
        <h2>EVENT DETAIL:</h2>
    </div>


    <div class="cards-container">
        <div class="card2">
            <div>
                <img class="card-Band-img-top" src="/images/default-img-events.png" alt="Card image cap">

            </div>
            <div>
                <h3>{{event.name}}</h3> {{!--nombre del evento --}}
                <p>Description: {{event.description}}</p>
                <p>Date: {{event.schedule}}</p>
                <p>Price: {{event.price}} â‚¬</p>
                <p>Starting Time: {{event.startTime}}</p>
                <p>Duration: {{event.duration}}</p>
            </div>
        </div>

    </div>

    {{!-- establecimiento detalle --}}
    {{#if event.establishment}}

    <div class="cont-title">
        <h2>ESTABLISHMENT DETAIL:</h2>
    </div>

    <div class="cards-container">
        <div class="card2">
            <div>
                <img class="card-Band-img-top" src="/images/local.png" alt="Card image cap">
            </div>
            <div>
                <p>Name: {{event.establishment.name}}</p>
                <p>Description: {{event.establishment.description}}</p>
                <p>Website: <a href="{{event.establishment.website}}"></a>Website {{website}}</p>
                <p>Instagram: {{event.establishment.instagramProfile}}</p>
                <p>Facebook: {{event.establishment.facebookProfile}}</p>
                <ul>Adress
                    <p>Street: {{event.establishment.street}}</p>
                    <p>City: {{event.establishment.city}}</p>
                    <p>Zip: {{event.establishment.zip}}</p>
                </ul>
                <p>Capacity: {{event.establishment.capacity}}</p>
                <p>Avatar: {{event.establishment.avatar}}</p>
            </div>
        </div>
    </div>
    {{/if}}

    {{!-- banda detalle --}}
    {{#if event.band}}
    <div class="cont-title">
        <h2>BAND DETAIL:</h2>
    </div>

    <div class="cards-container">
        <div class="card2">
            <div>
                <img class="card-Band-img-top" src="/images/band.png" alt="Card image cap">
            </div>
            <div>
                <p>Name: {{event.band.name}}</p>
                <p>Musical Genre: {{event.band.genre}}</p>
                <p>Description: {{event.band.description}}</p>
                <p>Website: <a href="{{event.band.website}}"></a>Website {{website}}</p>
                <p>Instagram: {{event.band.instagramProfile}}</p>
                <p>Facebook: {{event.band.facebookProfile}}</p>
                <p>Avatar: {{event.band.avatar}}</p>
            </div>
        </div>

    </div>

    {{/if}}

    {{#if bandAction }}

    <button onclick="location.href='/events/bookingevents/{{id}}/join'" type="button" class="register-button">Join to
        Play</button>
    {{else}}
    <button onclick="location.href='/events/{{id}}/join'" type="button" class="register-button">Join *</button>
    {{/if}}


</div>