<div class="establishments-container">
    {{#if userFound.establishment.name}}
    <div class="note-establishments">
        <p>*If you want to modify your establishment before you should leave the current one<a
                href="/user/profile">here</a></p>
    </div>
    {{else}}
    <div class="create-establishment">
        <p><span>{{userFound.username}}</span>, do you want to add your establishment?</p>
        <a class="btn-band-details" href="/establishments/new">Create Establishment</a>
    </div>
    {{/if}}
    <div class="establishmentslist">
        <h2>List of registered establishments:</h2>
        <section class="bands-section">
            {{#each establishments}}
            <div class="band-cards-container">
                <div class="band-cards">
                    <h3>{{this.name}}</h3>
                    <p>{{this.description}}</p>
                    <a class="btn-band-details" href="/establishments/{{this._id}}">Establishments Details</a>
                </div>
            </div>
            {{/each}}
        </section>
    </div>
</div>