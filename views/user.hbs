<div class="card">
  <p class="title-mng">Manage Your Establishment</p>
  <div class="bttn-card">
    {{#if userFound.establishment.name}}

    <div class="user-establishment">
      <a href="/user/profile/">
        <div class="img-wrapper-establishment">
          {{#if userFound.establishment.avatar}}
          <img class="user-establishment-img" src="{{userFound.establishment.avatar}}" alt="" width="300px">
          {{else}}
          <img class="user-establishment-img" src="/images/local.png" alt="">
          {{/if}}
        </div>
        <h3>{{userFound.establishment.name}}</h3>
      </a>
    </div>

    <div class="user-establishment">
      <a href="/user/events/new">
        <div class="img-wrapper-establishment">
          <img class="user-establishment-img" src="/images/crear-evento.png" alt="">
        </div>
        <h3>Create Event</h3>
      </a>
    </div>

    {{else}}
    {{!-- <button class="btn-lnk"><a href="/establishments/new" class="card">Create Pub</a></button> --}}
    <a class="btn-lnk est" href="/establishments/new">Create Establishment</a>
    {{/if}}
  </div>
</div>

