  function bandForm() {
    document.getElementById('Band-form-profile').classList.toggle('not-shown');
    return true;
  }
  function establishmentForm() {
    document.getElementById('Establishment-form-profile').classList.toggle('not-shown');
    return true;
  }

</script>
