    <label for='chk'><u>C</u>heckbox</label>
    <div id='clicks'></div> --}}
    </div>
    <div id='Establishment-form-profile' class="not-shown">
      <label for='establishment'>Music Club:</label><br>
      <input type='text' name='establishmentName' placeholder='Music Club Name'><br>
    </div>
