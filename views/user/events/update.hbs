<div class="container">
  <div class="cont-title">
    <h2>Edit Event</h2>
  </div>

  <div class="form-style">

    <div class="form-update-event">
      <form action="/user/events/{{event._id}}/edit" method="post">
        <label for='name'>Event Name:</label>
        <input type='text' name='name' value="{{event.name}}" required>
        <label for='description'>Description:</label>
        <input type='text' name='description' value='{{event.description}}' required>
        <label for='schedule'>Schedule:</label>
        <input type='datetime-local' name='schedule' value='{{event.schedule}}' step='1' min='{{fechaActual}}'>
        <label for='starTime'>StartTime</label>
        <input type='text' name='startTime' value='{{event.startTime}}'>
        <label for='price'>Price:</label>
        <input type='text' name='price' value='{{event.price}}'>
        <label for='durationMins'>Duration:</label>
        <input type='text' name='durationMins' value='{{event.durationMins}}'>

        <button type='submit'>Update EVENT</button>
      </form>
    </div>
  </div>